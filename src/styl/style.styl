.header-title-container
  text-align center

.page
  position relative
  width 100%
  padding 20px 50px

  &.ng-enter
  &.ng-leave
    transition left 0.5s ease-in-out

  &.ng-enter
    left 100%

  &.ng-enter-active
    left 0

  &.ng-leave
    left -100%

  &.ng-leave-active
    left -200%

  .user-page

    .avatar
      width 70%

    .login
      margin 0

    .language
      margin auto

  .repo-page

    .description
      text-align center

  .lists-container

    &>div
      margin-bottom 20px

    .md-toolbar
      padding 0 16px









