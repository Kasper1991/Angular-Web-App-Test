.header-title-container
  text-align center

.page
  position relative
  width 100%
  padding 20px 50px

  &.ng-enter
  &.ng-leave
    transition all 0.5s ease-in-out

  &.ng-enter
    left 100%
    opacity 0

  &.ng-enter-active
    left 0
    opacity 1

  &.ng-leave
    left -100%
    opacity 1

  &.ng-leave-active
    left -200%
    opacity 0

  .user-page

    .avatar
      width 70%

    .login
      margin 0

    .language
      margin auto

  .repo-page

    .description
      text-align center

  .lists-container
    position relative

    &>div
      margin-bottom 20px

    .md-toolbar
      padding 0 16px

    .repos-list-container
      position relative
      background-color #fff

      &.ng-enter
        opacity 0
        transition opacity ease-in 0.5s

      &.ng-enter-active
        opacity 1

.loading
  position absolute
  left 50%
  margin 50px 30px 0 -30px
  height 60px
  width 60px
  border 2px solid rgba(0,0,0,0.2)
  border-left-color rgba(0,0,0,0.6)
  border-radius 30px
  opacity 1
  animation animation-rotate 500ms linear infinite

  &.ng-leave
    transition opacity 0.3s ease-out

    &.ng-leave-active
      opacity 0

@keyframes animation-rotate
  100%
    transform rotate(360deg)











